{
    "rewrites": [
        {
            "source": "/es/:path*",
            "destination": "/es/index.html"
        },
        {
            "source": "/en/:path*",
            "destination": "/en/index.html"
        }
    ],
    "redirects": [
        {
            "source": "/",
            "has": [
                {
                    "type": "header",
                    "key": "accept-language",
                    "value": "(?<lang>^((?!es|en).)*$)"
                }
            ],
            "destination": "/es",
            "permanent": true
        },
        {
            "source": "/",
            "has": [
                {
                    "type": "header",
                    "key": "accept-language",
                    "value": "(?<lang>es)"
                }
            ],
            "destination": "/es",
            "permanent": true
        },
        {
            "source": "/",
            "has": [
                {
                    "type": "header",
                    "key": "accept-language",
                    "value": "(?<lang>en)"
                }
            ],
            "destination": "/en",
            "permanent": true
        }
    ]
}