{
    "rewrites": [
        {
            "source": "/es/:path*",
            "destination": "/es/index.html"
        },
        {
            "source": "/en/:path*",
            "destination": "/en/index.html"
        },
        {
            "source": "/",
            "destination": "/en/index.html"
        }
    ],
    "redirects": [
        {
            "source": "/",
            "has": [
                {
                    "type": "header",
                    "key": "accept-language",
                    "value": "(^|,)\\s*es(;|,|$)"
                }
            ],
            "destination": "/es/"
        },
        {
            "source": "/",
            "has": [
                {
                    "type": "header",
                    "key": "accept-language",
                    "value": "(^|,)\\s*en(;|,|$)"
                }
            ],
            "destination": "/en/"
        },
        {
            "source": "/",
            "destination": "/en/"
        }
    ]
}